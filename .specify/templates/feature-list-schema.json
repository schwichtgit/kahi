{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Feature List",
  "description": "Schema for feature_list.json used by the autonomous coding harness.",
  "type": "object",
  "required": ["features"],
  "additionalProperties": false,
  "properties": {
    "features": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "category",
          "title",
          "description",
          "testing_steps",
          "passes",
          "dependencies"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
          },
          "category": {
            "type": "string",
            "enum": ["infrastructure", "functional", "style", "testing"]
          },
          "title": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "testing_steps": {
            "type": "array",
            "minItems": 3,
            "items": {
              "type": "string",
              "minLength": 10
            }
          },
          "passes": {
            "type": "boolean"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
            },
            "uniqueItems": true
          }
        }
      }
    }
  }
}
